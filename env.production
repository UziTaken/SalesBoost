DEBUG=false
LOG_LEVEL=INFO

# ============================================
# 服务器配置
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
FRONTEND_URL=http://106.53.168.252:3000
API_URL=http://106.53.168.252:8000

# ============================================
# 数据库配置（自建PostgreSQL）
# ============================================
DATABASE_URL=postgresql://salesboost:salesboost2026@localhost:5432/salesboost
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================
# Redis配置（自建Redis）
# ============================================
REDIS_URL=redis://:salesboost2026@localhost:6379/0
REDIS_PASSWORD=salesboost2026

# ============================================
# LLM API密钥（硅基流动）
# ============================================
SILICONFLOW_API_KEY=sk-snmxtfurdqafrgyeppwefsihzwsqolsashzhhtvwhlkxvjib
DEFAULT_LLM_PROVIDER=siliconflow
SILICONFLOW_MODEL=deepseek-ai/DeepSeek-V3
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1

# 备用配置（如果需要）
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# ============================================
# JWT认证配置（自动生成）
# ============================================
JWT_SECRET_KEY=salesboost_jwt_secret_key_2026_production_secure_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=43200

# ============================================
# 简单用户认证（内置）
# ============================================
AUTH_TYPE=simple
ADMIN_EMAIL=admin@salesboost.local
ADMIN_PASSWORD=Admin@2026

# ============================================
# 文件存储配置（本地存储）
# ============================================
STORAGE_TYPE=local
UPLOAD_DIR=/opt/salesboost/data/uploads
MAX_UPLOAD_SIZE=104857600

# ============================================
# CORS配置
# ============================================
CORS_ORIGINS=http://106.53.168.252:3000,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# ============================================
# 功能开关
# ============================================
ENABLE_CONSTITUTIONAL_AI=true
ENABLE_MOE_ROUTER=true
ENABLE_RL_LEARNING=true
ENABLE_SEMANTIC_CACHE=true
ENABLE_STREAMING=true

# ============================================
# 缓存配置
# ============================================
CACHE_TTL=3600
SEMANTIC_CACHE_THRESHOLD=0.85

# ============================================
# 并发配置
# ============================================
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20
RATE_LIMIT_PER_MINUTE=100

# ============================================
# 监控配置
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# 日志配置
# ============================================
LOG_FILE=/opt/salesboost/logs/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
